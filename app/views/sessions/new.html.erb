<div class="bg-image">
    
<div class="bg-text">
    <h1 class="welcome">Welcome to Museum Go!</h1>

    Log into your account or 
    <%= link_to "create a new user account", new_user_path %>


<%= flash.notice %>

    <%= form_tag login_path, :html => {:class => "form-horizontal center"} do %>
        <%= label_tag :username  %>
        <%= text_field_tag :username %>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <%= submit_tag "Login", class: 'btn btn-outline-primary' %>
    <% end %>
</div>

</div>
