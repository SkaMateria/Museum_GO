<div class="bg-image">
<div class="bg-text">
<h1>Create a new user account!</h1>

<% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li class="error"> <%= msg %> </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @user   do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Create account" %>
<% end %>
</div>
</div>